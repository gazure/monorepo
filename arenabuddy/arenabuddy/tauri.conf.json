{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "arenabuddy",
  "identifier": "com.gazure.dev.arenabuddy.app",
  "build": {
    "beforeDevCommand": "cd ./arenabuddy_ui && trunk serve",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "cd ./arenabuddy_ui trunk build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "arenabuddy",
        "width": 1024,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "signingIdentity": "-",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      },
      "files": {},
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13"
    },
    "resources": ["./data/cards-full.pb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
